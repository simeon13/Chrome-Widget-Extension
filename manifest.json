{
    "name": "Popup Extension w/ Widgets",
    "version": "1.0",
    "description": "Displays many useful things on the main page (Weather, Most Visited Websites). More to come!",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": "images/rocket.png",
        "default_popup": "widget.html"
    },
    "permissions": [
        "topSites", "geolocation", "https://ajax.googleapis.com/", 
        "contentSettings", "*://*.api.openweathermap.org/*", "*://*.api.unsplash.com//*"
    ],

    "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'"    
}